<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_modify_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="62dp"
        android:text="@string/modify_url" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_modify_url"
        android:layout_alignRight="@+id/edt_modify_url"
        android:layout_below="@+id/edt_modify_url"
        android:layout_marginTop="26dp"
        android:background="@drawable/btn_selector"
        android:padding="10dp"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_modify_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_modify_url"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="输入空则还原默认值"
        android:lines="5" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txt_old_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_modify_url"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="old_url" />

</RelativeLayout>