<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txt_imei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknow" />

    <TextView
        android:id="@+id/txt_appkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknow" />

    <TextView
        android:id="@+id/txt_packageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknow" />

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editText_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/setTag" >
        </EditText>

        <TextView
            android:id="@+id/txt_setTag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/setTag"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_push"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

</LinearLayout>